# WedSync Terraform Variables Example
# Copy this file to terraform.tfvars and update with your values

# Basic Configuration
project_name = "wedsync"
environment  = "production"
owner_email  = "admin@wedsync.com"
aws_region   = "us-east-1"

# Domain Configuration
domain_name                 = "wedsync.com"
ssl_certificate_arn        = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"
cloudfront_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/87654321-4321-4321-4321-210987654321"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
enable_nat_gateway = true
enable_vpn_gateway = false

# Application Configuration
app_instance_type    = "t3.large"
app_min_size        = 2
app_max_size        = 10
app_desired_capacity = 3
key_pair_name       = "wedsync-production-key"

# Database Configuration
db_instance_class         = "db.r5.large"
db_allocated_storage     = 200
db_max_allocated_storage = 2000
db_name                  = "wedsync_production"
db_username              = "wedsync_admin"
enable_read_replicas     = true
read_replica_count       = 2
backup_retention_period  = 30
enable_performance_insights = true

# Redis Configuration
redis_node_type     = "cache.r5.large"
redis_num_nodes     = 2
redis_engine_version = "7.0"

# S3 Configuration
s3_enable_versioning = true
s3_enable_encryption = true

# Security Configuration
enable_waf           = true
waf_rate_limit      = 2000
waf_blocked_countries = ["CN", "RU"]  # Example blocked countries

# Monitoring Configuration
enable_detailed_monitoring = true
alert_email               = "alerts@wedsync.com"
slack_webhook_url         = "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# Secrets (Use AWS Secrets Manager or environment variables)
supabase_service_key = "your-supabase-service-role-key"
stripe_secret_key    = "sk_live_your-stripe-secret-key"
openai_api_key      = "sk-your-openai-api-key"
resend_api_key      = "re_your-resend-api-key"

# Auto Scaling Configuration
scale_up_threshold   = 75
scale_down_threshold = 25
scale_up_cooldown    = 300
scale_down_cooldown  = 300

# Backup and DR Configuration
enable_automated_backups    = true
backup_schedule            = "cron(0 2 * * ? *)"  # Daily at 2 AM UTC
enable_cross_region_backup = true
dr_region                  = "us-west-2"

# Cost Optimization
enable_spot_instances = false
spot_instance_types   = ["t3.medium", "t3.large", "m5.large"]

# Feature Flags
enable_blue_green_deployment = false
enable_canary_deployment     = false

# Development/Debugging
enable_bastion_host    = false
enable_vpc_flow_logs   = true

# Compliance and Security
enable_config_rules  = true
enable_guardduty     = true
enable_security_hub  = true

# Development Access (restrict in production)
local_ip_cidr = "203.0.113.0/24"  # Replace with your office IP range