    }
  ],
  
  "shortcuts": [
    {
      "name": "Vendor Dashboard",
      "short_name": "Dashboard", 
      "description": "View vendor performance dashboard",
      "url": "/analytics/dashboard?source=shortcut",
      "icons": [
        {
          "src": "/icons/dashboard-shortcut-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Performance Charts",
      "short_name": "Charts",
      "description": "View performance analytics charts", 
      "url": "/analytics/charts?source=shortcut",
      "icons": [
        {
          "src": "/icons/charts-shortcut-96.png", 
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Vendor Comparison",
      "short_name": "Compare",
      "description": "Compare vendor performance",
      "url": "/analytics/compare?source=shortcut", 
      "icons": [
        {
          "src": "/icons/compare-shortcut-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Offline Data",
      "short_name": "Offline",
      "description": "Access cached analytics data",
      "url": "/analytics/offline?source=shortcut",
      "icons": [
        {
          "src": "/icons/offline-shortcut-96.png", 
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "categories": [
    "business",
    "productivity",
    "finance"
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://wedsync.com/analytics"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+wedsyncanalytics",
      "url": "/analytics/deep-link?data=%s"
    }
  ],
  
  "share_target": {
    "action": "/analytics/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "analytics_data",
          "accept": [".json", ".csv", ".xlsx"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/analytics/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "handle_links": "preferred",
  
  "scope_extensions": [
    {
      "origin": "https://wedsync.com"
    }
  ],
  
  "permissions": [
    "storage",
    "background-sync", 
    "push",
    "notifications"
  ],
  
  "features": [
    "offline",
    "background-sync",
    "push-notifications", 
    "file-handling",
    "share-target"
  ]
}