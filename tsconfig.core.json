{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsconfig.core.tsbuildinfo",
    "removeComments": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/components/**/*.tsx",
    "src/lib/**/*.ts",
    "src/hooks/**/*.ts",
    "src/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx", 
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**/*",
    "**/*test*/**/*",
    "src/__tests__/**/*",
    "src/tests/**/*",
    "benchmarks/**/*",
    "docs/**/*",
    ".next",
    "out",
    "dist", 
    "build"
  ]
}