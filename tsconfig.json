{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsconfig.tsbuildinfo",
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "tests/**/*",
    "scripts/**/*", 
    "docs/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*",
    "**/*test*/**/*",
    "supabase/functions/**/*",
    "src/tests/**/*",
    "src/__tests__/**/*",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "benchmarks/**/*",
    "playwright*/**/*",
    "WORKFLOW*/**/*",
    "TEST-WORKFLOW/**/*",
    "wedsync/__tests__/**/*",
    "wedsync/tests/**/*",
    "wedsync/playwright-tests/**/*",
    "wedsync/benchmarks/**/*",
    "EVIDENCE-PACKAGE*/**/*",
    "CORE-SPECIFICATIONS/**/*",
    ".playwright-mcp/**/*",
    ".serena/**/*",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "test-results"
  ],
  "ts-node": {
    "esm": true
  }
}
