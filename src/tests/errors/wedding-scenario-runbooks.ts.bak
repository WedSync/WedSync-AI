export interface RunbookStep {
  id: string;
  title: string;
  description: string;
  estimatedTime: string;
  priority: 'CRITICAL' | 'HIGH' | 'MEDIUM' | 'LOW';
  requiredRole: 'COORDINATOR' | 'VENDOR' | 'SUPPORT' | 'EMERGENCY' | 'ANY';
  commands?: string[];
  checkpoints: string[];
  fallbackOptions: string[];
}

export interface WeddingScenarioRunbook {
