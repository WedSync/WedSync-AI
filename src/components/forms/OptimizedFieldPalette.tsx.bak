import React from 'react';

const FIELD_TYPES = [
  { type: 'text', label: 'Text Input', icon: '📝' },
  { type: 'email', label: 'Email', icon: '✉️' },
  { type: 'number', label: 'Number', icon: '🔢' },
  { type: 'select', label: 'Dropdown', icon: '📋' },
  { type: 'checkbox', label: 'Checkbox', icon: '☑️' },
  { type: 'radio', label: 'Radio', icon: '⭕' },
  { type: 'textarea', label: 'Text Area', icon: '📄' },
  { type: 'date', label: 'Date', icon: '📅' },
];

interface OptimizedFieldPaletteProps {
  onFieldAdd?: (fieldType: string) => void;
}

export function OptimizedFieldPalette({ onFieldAdd }: OptimizedFieldPaletteProps) {
  return (
    <div className="p-4 border rounded-lg bg-gray-50">
      <h3 className="text-lg font-semibold mb-4">Field Palette</h3>
      <div className="grid grid-cols-2 gap-2">
        {FIELD_TYPES.map((field) => (
          <button
            key={field.type}
            onClick={() => onFieldAdd?.(field.type)}
            className="p-3 border rounded hover:bg-white transition-colors text-left"
          >
            <span className="mr-2">{field.icon}</span>
            {field.label}
          </button>
        ))}
      </div>
    </div>
  );
}

export { OptimizedFieldPalette as FieldPalette };