      'new_response': 'New Response',
      'response_updated': 'Response Updated',
      'high_priority': 'High Priority',
      'follow_up_due': 'Follow-up Due',
      'vip_inquiry': 'VIP Inquiry'
    };
    return labels[event as keyof typeof labels] || event;
  };

