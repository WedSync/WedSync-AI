interface NotificationChannel {
  id: string;
  type: 'email' | 'sms' | 'in_app' | 'slack' | 'webhook';
  name: string;
  config: {
    email?: string;
    phone?: string;
    webhook_url?: string;
    slack_channel?: string;
    template?: string;
  };
  isActive: boolean;
}

interface NotificationRule {
  id: string;
  name: string;
  description: string;
  trigger: {
    event: 'new_response' | 'response_updated' | 'high_priority' | 'follow_up_due' | 'vip_inquiry';
    conditions?: {
      field: string;
      operator: string;
      value: any;
    }[];
  };
  channels: string[]; // channel IDs
  recipients: {
    type: 'user' | 'role' | 'email';
    value: string;
  }[];
  timing: {
    immediate: boolean;
    delay?: number; // minutes
    schedule?: {
      days: string[];
      hours: { start: string; end: string };
    };
  };
  template: {
    subject?: string;
    message: string;
    variables: string[];
  };
  isActive: boolean;
  metrics: {
    sent: number;
    delivered: number;
    failed: number;
    lastSent?: Date;
  };
  createdAt: Date;
}

