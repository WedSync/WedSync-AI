'use client';

import { ReactNode } from 'react';
import { Button } from '@/components/ui/button';
import { 
  FileText, 
  Users, 
  Calendar, 
  Inbox,
  Search,
  Plus,
  Upload,
  FolderOpen
} from 'lucide-react';

interface EmptyStateProps {
  icon?: ReactNode;
  title: string;
  description: string;
  action?: {
    label: string;
    onClick: () => void;
    icon?: ReactNode;
  };
  secondaryAction?: {
    label: string;
    onClick: () => void;
  };
  variant?: 'default' | 'search' | 'error';
  className?: string;
}

export function EmptyState({
  icon,
  title,
  description,
  action,
  secondaryAction,
  variant = 'default',
  className = ''
}: EmptyStateProps) {
  const variants = {
    default: 'text-gray-400',
    search: 'text-blue-400',
    error: 'text-red-400'
  };

  return (
    <div className={`flex flex-col items-center justify-center py-12 px-6 ${className}`}>
      {icon && (
        <div className={`mb-4 ${variants[variant]}`}>
          {icon}
        </div>
      )}
      
      <h3 className="text-lg font-semibold text-gray-900 mb-2 text-center">
        {title}
      </h3>
      
      <p className="text-gray-600 text-center max-w-md mb-6">
        {description}
      </p>
      
      {(action || secondaryAction) && (
        <div className="flex gap-3">
          {action && (
            <Button 
              onClick={action.onClick}
              className="flex items-center gap-2"
            >
              {action.icon}
              {action.label}
            </Button>
          )}
          
          {secondaryAction && (
            <Button 
              variant="outline"
              onClick={secondaryAction.onClick}
            >
              {secondaryAction.label}
            </Button>
          )}
        </div>
      )}
    </div>
  );
}

// Pre-configured empty states for common scenarios
export function NoFormsEmptyState({ onCreateNew }: { onCreateNew: () => void }) {
  return (
    <EmptyState
      icon={<FileText className="h-16 w-16" />}
      title="No forms yet"
      description="Create your first form to start collecting responses from clients."
      action={{
        label: "Create Form",
        onClick: onCreateNew,
        icon: <Plus className="h-4 w-4" />
      }}
      secondaryAction={{
        label: "Import PDF",
        onClick: () => window.location.href = '/forms/import'
      }}
    />
  );
}

