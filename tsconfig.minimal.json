{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsconfig.minimal.tsbuildinfo",
    "removeComments": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/app/**/page.tsx",
    "src/app/**/layout.tsx",
    "src/app/api/**/*.ts",
    "src/lib/**/*.ts",
    "src/types/**/*.ts",
    "middleware.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx", 
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**/*",
    "**/*test*/**/*",
    "src/__tests__/**/*",
    "src/tests/**/*",
    "src/components/**/*",
    "benchmarks/**/*",
    "docs/**/*",
    "WORKFLOW*/**/*",
    "TEST-WORKFLOW/**/*",
    "EVIDENCE-PACKAGE*/**/*",
    ".serena/**/*",
    ".playwright-mcp/**/*",
    ".next",
    "out",
    "dist", 
    "build"
  ]
}